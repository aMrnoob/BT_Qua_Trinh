<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="List View"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:background="#213A58"
        android:gravity="center_vertical"
        android:paddingStart="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#0C6478"
        android:gravity="center">

        <EditText
            android:id="@+id/edtSubjectName"
            android:layout_width="315dp"
            android:layout_height="50dp"
            android:hint="Nhập tên môn học"
            android:textStyle="bold"
            android:textColor="#696969"
            android:textSize="18dp"
            android:background="@drawable/border_edt"
            android:paddingStart="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAddSubject"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Thêm"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#696969"
            android:layout_margin="20dp"
            android:background="@drawable/border_btn"
            android:backgroundTint="#80EE98"/>

        <Button
            android:id="@+id/btnUpdateSubject"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Cập nhật"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#696969"
            android:layout_margin="20dp"
            android:background="@drawable/border_btn"
            android:backgroundTint="#FFCC99" />
    </LinearLayout>

    <ListView
        android:id="@+id/lvSubjects"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnListView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="List View"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/border_btn"
            android:backgroundTint="#0099FF"/>

        <Button
            android:id="@+id/btnGridView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Grid View"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/border_btn"
            android:backgroundTint="#99CCFF"/>

        <Button
            android:id="@+id/btnRecyclerView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Recycler View"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/border_btn"
            android:backgroundTint="#99CCFF"/>
    </LinearLayout>
</LinearLayout>